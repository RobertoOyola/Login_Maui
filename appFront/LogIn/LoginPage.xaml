<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="appFront.LogIn.LoginPage"
             Title="LoginPage">
    <ScrollView>
        <Grid
            RowDefinitions="*,*,*"
            ColumnDefinitions="*,*">

            <Image 
                Source="png_poke.png"
                Grid.Column="0"
                Grid.Row="1"
                Margin="15"/>

            <StackLayout
                Grid.Column="1"
                Grid.Row="1"
                Spacing="5"
                Margin="10">
                <Label 
                    Text="Usuario" />
                <Frame
                    Padding="0">
                    <Entry />
                </Frame>
                <Label 
                    Text="Contrasenia" />
                <Frame
                    Padding="0">
                    <Entry />          
                </Frame>
                <Button 
                    Margin="25"
                    Text="INICIAR SESION"/>
            </StackLayout>
            

        </Grid>
    </ScrollView>
</ContentPage>